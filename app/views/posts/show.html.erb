<h1>ToDoリスト</h1>
<h3>新規投稿</h3>
<%= form_for @post do |f| %>
    <div class="title">
        <%= f.label :title %>
        <%= f.text_field :title, :size => 140 %>
    </div>
    <div class="contents">
        <%= f.label :contents %>
        <%= f.text_field :contents, :size => 140 %>
    </div>
    <%= f.submit "投稿" %>
<% end %>
<%= link_to("やること一覧に戻る", posts_path) %>
